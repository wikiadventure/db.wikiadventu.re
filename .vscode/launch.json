    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Deno debug current file",
            "type": "node",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "C:\\ProgramData\\chocolatey\\lib\\deno\\deno.EXE",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-wait=127.0.0.1:4269",
                "--allow-all"
            ],
            "attachSimplePort": 4269
        }
    ]
}